<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_top"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/ic_background">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_top_two"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
      <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_header_top"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="5dp">
      <ImageView android:id="@+id/image"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="10dp"
               android:src="@drawable/ic_att6"/>
     <TextView android:id="@+id/window_title"
				 android:text="@string/testme_title" 
				 android:textColor="#000f00"
				 android:layout_toRightOf="@+id/image"
        		 android:textSize="30sp"  
			     android:layout_width="wrap_content" 
				 android:layout_height="wrap_content"/>
	 <TextView android:id="@+id/testme_question"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="Ask a question"
	    		  android:layout_marginTop="10dip"
				  android:layout_below="@+id/window_title"
        		  android:paddingTop="10dp"
        		  android:textSize="15sp"  
	              android:textStyle="bold"
	              android:textColor="#a52a2a"/>
	              <EditText
					    android:id="@+id/title_edittext"
					    android:layout_marginTop="3px"
					    android:layout_width="fill_parent"
              			android:layout_below="@+id/testme_question"
					    android:layout_height="wrap_content"/>
					    
	 </RelativeLayout>
	<View   android:id="@+id/firstDivider"
		        android:layout_height="2dp"
		        android:layout_width="fill_parent"
		        android:background="#000f00" />		
	<Button android:id="@+id/ok_button"
					android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="10dip"
				    android:layout_alignParentBottom="true"
				    android:gravity="center_vertical|center_horizontal"
				    android:textColor="#000f00"
		        	android:text="@string/ok"/>
   </LinearLayout>
</LinearLayout>