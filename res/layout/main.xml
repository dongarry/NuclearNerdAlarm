<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@drawable/ic_background"
    android:layout_height="fill_parent">
    <View android:id="@+id/firstDivider"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#000f00"/>
<Button android:id="@+id/addalarm"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:drawableLeft="@drawable/ic_att6"
	android:text="@string/add"
	android:onClick="addalarm"/>

<TextView android:id="@+id/label"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="44sp"
android:textColor="#000f00"
android:text="@string/alarms"/> 
<View   android:id="@+id/firstDivider"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:background="#000f00"/>
   	<ListView 
		android:id="@android:id/list"
         android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:drawSelectorOnTop="false" /> 
<TextView android:id="@android:id/empty"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#000f00"
         android:text="@string/noalarmset"/>
</LinearLayout>
